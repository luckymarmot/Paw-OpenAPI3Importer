{
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noEmit": true,
    "baseUrl": "src",
    "typeRoots": ["src/types"],
    "paths": {
      "~*": ["*"],
      "lib": ["src/lib"],
      "types": ["src/types"]
    },
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true
  },
  "include": ["src", "paw.config.json"]
}
